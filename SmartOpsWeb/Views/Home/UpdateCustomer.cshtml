@model SmartOpsAPI.Dtos.UserDto

@{
    ViewData["Title"] = "UpdateUser";
    Layout = "~/Views/Shared/_LayoutForm.cshtml";

}

<div class="main-content">

    <div class="page-content">
        <div class="container-fluid">

            <!-- start page title -->
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box d-flex align-items-center justify-content-between">
                        <h4 class="mb-0 font-size-18"></h4>

                    </div>
                </div>
            </div>
            <!-- end page title -->

            <div class="row">


                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title mb-4 center">Create a New User</h4>

                            <form class="form-horizontal" asp-action="UpdateCustomer" method="post">
                                <div class="form-group row mb-4">
                                    <label for="horizontal-email-input" class="col-sm-3 col-form-label">Email</label>
                                    <div class="col-sm-9">
                                        <input type="email" class="form-control" asp-for="Email" id="username" placeholder="Enter Email">
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group row mb-4">
                                    <label for="horizontal-firstname-input" class="col-sm-3 col-form-label">First name</label>
                                    <div class="col-sm-9">
                                        <input type="text" class="form-control" asp-for="Name" id="username" placeholder="Enter Name">
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="form-group row mb-4">
                                    <label for="horizontal-firstname-input" class="col-sm-3 col-form-label">Address</label>
                                    <div class="col-sm-9">
                                        <input type="text" class="form-control" asp-for="Address" id="username" placeholder="Enter Address">
                                        <span asp-validation-for="Address" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group row mb-4">
                                    <label for="horizontal-password-input" class="col-sm-3 col-form-label">Password</label>
                                    <div class="col-sm-9">
                                        <input type="password" class="form-control" asp-for="Password" id="" placeholder="Enter password">
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="ConfirmPassword">Confirm Password</label>
                                    <input type="password" class="form-control" asp-for="ConfirmPassword" id="" placeholder="Confirm password">
                                </div>

                                <div class="form-group">
                                    <label for="PhoneNumber">PhoneNumber</label>
                                    <input type="text" class="form-control" asp-for="PhoneNumber" id="" placeholder="Enter PhoneNumber">
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                                <div class="form-group row justify-content-end">
                                    <div class="col-sm-9">
                                        @*<div class="custom-control custom-checkbox mb-4">
                                                <input type="checkbox" class="custom-control-input" id="horizontal-customCheck">
                                                <label class="custom-control-label" for="horizontal-customCheck">Remember me</label>
                                            </div>*@

                                        <div>
                                            <a asp-controller="Home" asp-action="dashboard" class="btn btn-danger" >Cancel</a>
                                            <button type="submit" class="btn btn-primary w-md">Update</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- end row -->

            <div class="row">
                <div class="col-lg-12">
                    <div class="card">

                    </div>
                </div>
            </div>
            <!-- end row -->

        </div> <!-- container-fluid -->
    </div>
    <!-- End Page-content -->


    <footer class="footer">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-6">
                    <script>document.write(new Date().getFullYear())</script> © Skote.
                </div>
                <div class="col-sm-6">
                    <div class="text-sm-right d-none d-sm-block">
                        Design & Develop by Tobi Ojumu
                    </div>
                </div>
            </div>
        </div>
    </footer>
</div>

